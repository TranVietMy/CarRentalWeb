          onclick="toggleDropdown('dropdownType')">
          <i class="fas fa-cogs"></i> Loại xe
        </div>
        <!-- Dropdown list -->
        <ul id="dropdownType" class="hidden absolute mt-2 w-48 rounded border bg-white shadow-lg">
