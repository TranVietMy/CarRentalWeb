        </div>

        <!-- Date Select -->
        <div class="mb-4 flex space-x-4">
          <div>
            <label for="pick-up-date" class="mb-1 block text-gray-700">Ngày nhận xe</label>
            <input type="datetime-local" id="pick-up-date" class="w-full rounded-md border border-gray-300 p-2" />
