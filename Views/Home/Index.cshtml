    <div class="w-110 rounded-lg bg-white p-6 shadow-lg">
      <h2 class="mb-4 text-xl font-semibold">Bạn cần thuê xe ?</h2>
      <form>
        <!-- Option Vehicle Type -->
        @* <div class="mb-4 flex space-x-4">
          <label class="flex items-center">
            <input type="radio" name="vehicle" class="form-radio text-blue-600" checked />
            <span class="ml-2">Ô tô</span>
          </label>
          <label class="flex items-center">
            <input type="radio" name="vehicle" class="form-radio text-blue-600" />
            <span class="ml-2">Xe máy</span>
          </label>
        </div> *@

