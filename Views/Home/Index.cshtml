</section>
@model CarRental.Models.CarViewModel

<div class="grid grid-cols-4 gap-4 p-5">

  @foreach(var xeThue in Model.XeThues){
  <a href="@Url.Action("ProductDetail", "Home", new { id = xeThue?.CarId })">
    <!-- Card 1 -->
    <div class="border rounded-lg p-4 shadow-md">
      <img
        src="@xeThue?.Avatar"
        alt="BENLY" class="w-full h-auto rounded-md mb-4">
      <h2 class="text-lg font-bold">@xeThue?.TenXe</h2>
      <p class="text-gray-500"><i class="fas fa-map-marker-alt"></i>@xeThue?.DiaDiem</p>
      <div class="flex justify-between items-center my-2">
        <p class="text-gray-500 line-through"><i class="fas fa-dollar-sign"></i> @xeThue?.GiaThueGio </p>
        <p class="text-teal-600 font-bold"><i class="fas fa-tag"></i>@xeThue?.GiaThueGio k/4 giờ</p>
      </div>
      <div class="flex justify-between items-center my-2">
        <p class="text-gray-500 line-through"><i class="fas fa-dollar-sign"></i>@xeThue?.GiaThueNgay k</p>
