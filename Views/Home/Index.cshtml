<section>
  <div class="mt-5 flex justify-between p-5">
    <div class="flex gap-5">
      <div class="relative">
        <div class="flex items-center gap-2 rounded border border-black p-2 cursor-pointer"
          onclick="toggleDropdown('dropdownAll')">
          <i class="fas fa-th"></i> Tất cả
        </div>
        <!-- Dropdown list -->
