@{
  ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<!-- Main Section -->
<section class="relative">
  <!-- Background Image -->
  <div class="h-96 bg-cover bg-center"
    style="background-image: url('https://media.istockphoto.com/id/1214872234/vi/anh/l%C3%A1i-xe-tr%C3%AAn-%C4%91%C6%B0%E1%BB%9Dng-n%E1%BB%81n-du-l%E1%BB%8Bch.jpg?s=612x612&w=0&k=20&c=h8o6WxS-hJm-mwBHwBhkbH__HuAlEKMNIKwTEg8f4z0='">
    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
  </div>
  <!-- Form Section -->
  <div class="absolute inset-0 flex items-center justify-end pr-5">
    <div class="w-110 rounded-lg bg-white p-6 shadow-lg">
      <h2 class="mb-4 text-xl font-semibold">Bạn cần thuê xe ?</h2>
      <form>
        <!-- Option Vehicle Type -->
        <div class="mb-4 flex space-x-4">
          <label class="flex items-center">
            <input type="radio" name="vehicle" class="form-radio text-blue-600" checked />
            <span class="ml-2">Ô tô</span>
          </label>
          <label class="flex items-center">
            <input type="radio" name="vehicle" class="form-radio text-blue-600" />
            <span class="ml-2">Xe máy</span>
          </label>
        </div>

        <!-- Location Select -->
        <div class="mb-4">
          <label for="location" class="mb-1 block text-gray-700">Chọn tỉnh thành</label>
          <select id="location" class="w-full rounded-md border border-gray-300 p-2">
            <option>Chọn tỉnh thành</option>
            <option>Hà Nội</option>
            <option>TP Hồ Chí Minh</option>
            <!-- Add more options as needed -->
          </select>
        </div>

        <!-- Date Select -->
        <div class="mb-4 flex space-x-4">
          <div>
            <label for="pick-up-date" class="mb-1 block text-gray-700">Ngày nhận xe</label>
            <input type="datetime-local" id="pick-up-date" class="w-full rounded-md border border-gray-300 p-2" />
          </div>
          <div>
            <label for="return-date" class="mb-1 block text-gray-700">Ngày trả xe</label>
            <input type="datetime-local" id="return-date" class="w-full rounded-md border border-gray-300 p-2" />
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="w-full rounded-md bg-blue-500 py-2 text-white hover:bg-blue-600">Tìm xe giá
          tốt</button>
      </form>
    </div>
  </div>
</section>

