      <div class="relative">
        <div class="flex items-center gap-2 rounded border border-black p-2 cursor-pointer"
          onclick="toggleDropdown('dropdownSeats')">
          <i class="fas fa-chair"></i> Số chỗ
        </div>
        <!-- Dropdown list -->
        <ul id="dropdownSeats" class="hidden absolute mt-2 w-48 rounded border bg-white shadow-lg">
          <li class="px-4 py-2 hover:bg-gray-200">4 Chỗ</li>
          <li class="px-4 py-2 hover:bg-gray-200">7 Chỗ</li>
