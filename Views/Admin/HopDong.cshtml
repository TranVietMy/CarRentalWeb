@{
    ViewData["Title"] = "Hợp Đồng";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Form</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 py-10">
    <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-6 mt-3">
        <h2 class="text-2xl font-semibold mb-4 text-gray-800">Create a Contract</h2>
        <form action="#" method="POST">
            <!-- Owner Information -->
            <div class="mb-4">
                <label for="ownId" class="block text-sm font-medium text-gray-700 mb-2">Owner ID</label>
                <input type="text" id="ownId" name="ownId"
                    class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2">
            </div>

            <div class="mb-4">
                <label for="cccd" class="block text-sm font-medium text-gray-700 mb-2">CCCD</label>
                <input type="text" id="cccd" name="cccd"
                    class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2">
            </div>

            <div class="mb-4">
                <label for="userId" class="block text-sm font-medium text-gray-700 mb-2">User ID</label>
                <input type="text" id="userId" name="userId"
                    class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2">
            </div>

            <!-- Vehicle Rental Information -->
            <div class="mb-4">
                <label for="xeThue" class="block text-sm font-medium text-gray-700 mb-2">Xe Thue (Vehicle)</label>
                <select id="xeThue" name="xeThue"
                    class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2">
                    <option value="">Select a vehicle...</option>
                    <!-- Example options -->
                    <option value="xe1">Xe Thue 1</option>
                    <option value="xe2">Xe Thue 2</option>
                    <option value="xe3">Xe Thue 3</option>
                </select>
            </div>

            <!-- Contract Details -->
            <div class="mb-4">
                <label for="startDate" class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
                <input type="date" id="startDate" name="startDate"
                    class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2">
            </div>

            <div class="mb-4">
                <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
                <input type="date" id="endDate" name="endDate"
                    class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2">
            </div>

            <div class="mb-4">
                <label for="price" class="block text-sm font-medium text-gray-700 mb-2">Price</label>
                <input type="number" id="price" name="price"
                    class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2"
                    step="0.01">
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end">
                <button type="reset"
                    class="bg-gray-200 hover:bg-gray-300 text-gray-700 py-2 px-4 rounded-md mr-2">Reset</button>
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-md">Create
                    Contract</button>
            </div>
        </form>
    </div>
</body>

</html>
