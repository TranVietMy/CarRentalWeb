@{
    ViewData["Title"] = "Forgot Password";
}
<div class="bg-gray-100 flex items-center justify-center p-10">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold mb-6 text-center">Forgot Password</h2>
        <form>
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required
                    class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:bg-gray-200 focus:border-gray-200 sm:text-sm">
            </div>
            <button type="submit"
                class="w-full py-2 px-4 bg-black text-white font-bold rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500">
                Reset Password
            </button>
        </form>
        <div class="mt-4 text-center">
            <a href="/login" class="text-sm text-gray-600 hover:text-gray-800">Back to Login</a>
        </div>
    </div>
</div>
